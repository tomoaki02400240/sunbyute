<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @product, url: shop_product_create_path, method: :post, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :name, '商品名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description, '商品説明' %>
        <%= f.text_area :description, class: 'form-control', rows: 5 %>
      </div>
      <%= f.file_field :product_image %>
      <%= f.submit '登録する', class: 'btn btn-primary btn-lg' %>
      <% end %>
    </div>
  </div>
</div>