<div class="container" style="width: 80%;">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= form_with(model: @shop_content, url: shop_des_update_path(@shop_content), method: :post, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :description, '店舗説明' %>
          <%= f.text_area :description, class: 'form-control', placeholder: '店舗説明編集' %>
        </div>
        <%= f.submit '編集', class: 'btn btn-primary btn-md' %>
      <% end %>
    </div>
  </div>
</div>